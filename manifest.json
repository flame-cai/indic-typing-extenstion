{
  "manifest_version": 3,
  "name": "Keyboard Transliterator",
  "description": "Converts Latin keystrokes to Devanagari script in real-time",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}